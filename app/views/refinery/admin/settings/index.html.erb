<div id='records'>
  <%= render 'records' %>
</div>
<div id='actions'>
  <%= render 'actions' %>
</div>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function() {
      $('#records ul li .actions a[href*=edit]').each(function(i, li) {
        $(li).attr('name', $(li).attr('tooltip'));
      });
    });
  </script>
<% end -%>
