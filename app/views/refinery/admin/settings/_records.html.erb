<% if searching? %>
  <h2>
    <%= t('results_for', :scope => 'refinery.admin.search', :query => params[:search]) %>
  </h2>
<% end %>
<div class='pagination_container'>
  <% if @settings.any? %>
    <%= render 'settings' %>
  <% else %>
    <p>
      <% if searching? %>
        <%= t('no_results', :scope => 'refinery.admin.search') %>
      <% else %>
        <strong>
          <%= t('.empty_set') %>
          <%= t('.create_first', :link => t('new', :scope => 'refinery.admin.settings.actions')) %>
        </strong>
      <% end %>
    </p>
  <% end %>
</div>